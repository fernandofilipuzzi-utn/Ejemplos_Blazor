@page "/login"

@using System.Security.Claims
@using AutentificacionAutorizacion.Components.Layout

@layout LoginLayout

<h3>Login</h3>

<div class="content">

    @if(mostrarMensaje)
    {
        <div class="alert-danger">@mensaje</div>
    }

    <EditForm  Model="loginModel"  OnValidSubmit="OnLogin" FormName="login" class="col-6 form m-3 p-3">

        <DataAnnotationsValidator /> 
        <ValidationSummary />       

        <div class="form-group mb-3">
            <label class="form-label" for="usuario">Usuario</label>
            <InputText id="usuario" class="form-control"  @bind-Value="loginModel.Usuario"/>
            <ValidationMessage For="@(() => loginModel.Usuario)" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label" for="contrasenia">Contraseña</label>
            <InputText type="password" id="contrasenia" class="form-control" @bind-Value="loginModel.Clave" />
            <ValidationMessage For="@(() => loginModel.Clave)" />
        </div>

        <button type="submit" class="btn btn-primary">Ingresar</button>
    </EditForm>

</div>

